<UserControl x:Class="RTL.Views.RtlSwView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="http://handycontrol.org/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Изображение платы -->
        <Image Source="/Resources/Images/board_image.png" Grid.Column="0" Margin="10"/>

        <!-- ProgressBar -->
        <ProgressBar Grid.Column="0" VerticalAlignment="Bottom" Height="20" Margin="10" Value="{Binding Progress}"/>

        <!-- ListBox с логами -->
        <ListBox Grid.Column="0" VerticalAlignment="Bottom" Height="100" Margin="10" ItemsSource="{Binding Logs}"/>

        <!-- Значения регистров -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="52V" FontWeight="Bold"/>
            <Border CornerRadius="5" Background="#FFDDDDDD" Padding="5">
                <TextBlock Text="{Binding Register52V}"/>
            </Border>
            <!-- Повторить для остальных регистров -->
        </StackPanel>
    </Grid>
</UserControl>