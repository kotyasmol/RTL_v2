<UserControl x:Class="RTL.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Выбор темы -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Выбор темы:" FontWeight="Bold" VerticalAlignment="Center" />
        <ComboBox Grid.Row="0" Grid.Column="2" ItemsSource="{Binding Themes}" SelectedItem="{Binding SelectedTheme}" Width="200"/>

        <!-- Папка для логов -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Папка для логов:" FontWeight="Bold" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Horizontal">
            <TextBox Text="{Binding LogFolderPath, Mode=TwoWay}" Width="200" IsReadOnly="True"/>
            <Button Content="Выбрать..." Command="{Binding SelectLogFolderCommand}" Margin="5,0,0,0"/>
        </StackPanel>

        <!-- Папка для отчетов -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Папка для отчетов:" FontWeight="Bold" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="4" Grid.Column="2" Orientation="Horizontal">
            <TextBox Text="{Binding ReportFolderPath, Mode=TwoWay}" Width="200" IsReadOnly="True"/>
            <Button Content="Выбрать..." Command="{Binding SelectReportFolderCommand}" Margin="5,0,0,0"/>
        </StackPanel>

        <!-- Профиль RTL-SW -->
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Профиль RTL-SW:" FontWeight="Bold" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="6" Grid.Column="2" Orientation="Horizontal">
            <TextBox Text="{Binding RtlSwProfilePath, Mode=TwoWay}" Width="200" IsReadOnly="True"/>
            <Button Content="Выбрать..." Command="{Binding SelectRtlSwProfileCommand}" Margin="5,0,0,0"/>
        </StackPanel>

        <!-- Профиль RTL-POE -->
        <TextBlock Grid.Row="8" Grid.Column="0" Text="Профиль RTL-POE:" FontWeight="Bold" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="8" Grid.Column="2" Orientation="Horizontal">
            <TextBox Text="{Binding RtlPoeProfilePath, Mode=TwoWay}" Width="200" IsReadOnly="True"/>
            <Button Content="Выбрать..." Command="{Binding SelectRtlPoeProfileCommand}" Margin="5,0,0,0"/>
        </StackPanel>

        <!-- COM-порт SW -->
        <TextBlock Grid.Row="10" Grid.Column="0" Text="COM (SW):" FontWeight="Bold" VerticalAlignment="Center" />
        <ComboBox Grid.Row="10" Grid.Column="2" ItemsSource="{Binding AvailablePorts}" SelectedItem="{Binding SelectedComPort, Mode=TwoWay}" Width="200"/>

        <!-- Программа прошивки для COM SW -->
        <TextBlock Grid.Row="12" Grid.Column="0" Text="Программа прошивки:" FontWeight="Bold" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="12" Grid.Column="2" Orientation="Horizontal">
            <TextBox Text="{Binding ComSwProgramPath, Mode=TwoWay}" Width="200" IsReadOnly="True"/>
            <Button Content="Выбрать..." Command="{Binding SelectComSwProgramCommand}" Margin="5,0,0,0"/>
        </StackPanel>

        <!-- COM-порт DUT -->
        <TextBlock Grid.Row="14" Grid.Column="0" Text="DUT Port:" FontWeight="Bold" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="14" Grid.Column="2" ItemsSource="{Binding AvailablePorts}" SelectedItem="{Binding SelectedDutPort, Mode=TwoWay}" Width="200"/>

        <!-- Файл прошивки для DUT -->
        <TextBlock Grid.Row="16" Grid.Column="0" Text="Файл прошивки:" FontWeight="Bold" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="16" Grid.Column="2" Orientation="Horizontal">
            <TextBox Text="{Binding DutFirmwarePath, Mode=TwoWay}" Width="200" IsReadOnly="True"/>
            <Button Content="Выбрать..." Command="{Binding SelectDutFirmwareCommand}" Margin="5,0,0,0"/>
        </StackPanel>

    </Grid>
</UserControl>
