<UserControl x:Class="RTL.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="10">
        <ComboBox ItemsSource="{Binding AvailableComPorts}" SelectedItem="{Binding SelectedComPort}"/>
        <ComboBox ItemsSource="{Binding AvailableDutPorts}" SelectedItem="{Binding SelectedDutPort}"/>
        <TextBox Text="{Binding LogsPath}"/>
        <CheckBox Content="Темная тема" IsChecked="{Binding IsDarkTheme}"/>
    </StackPanel>
</UserControl>